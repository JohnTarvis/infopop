{
  "manifest_version": 2,
  "name": "infopop",
  "version": "0.1",
  "browser_specific_settings": {
      "gecko": {
          "strict_min_version": "54.0a1"
      }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["infopop.js","axios.js"]
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "permissions": [
    "activeTab",
    "*://www.googleapis.com/*",
    "<all_urls>",
    "webRequest", 
    "webRequestBlocking",
    "clipboardRead"
  ]

}
